<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/map_sidebar_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/map_sidebar_menu_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="invisible">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/map_settings_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/map_sidebar_menu_layout"
            android:src="@drawable/ic_settings_white_24dp"
            app:fabSize="mini"
            app:backgroundTint="@color/my_primary"/>


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/map_nav_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="21dp"
            android:layout_toEndOf="@+id/map_settings_fab"
            android:src="@drawable/ic_navigation_white_24dp"
            app:fabSize="mini"
            app:backgroundTint="@color/my_primary"/>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/map_show_my_position_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="120dp"
            android:src="@drawable/ic_location_searching_white_24dp"
            app:fabSize="mini"
            app:backgroundTint="@color/my_primary"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/map_sidebar_control_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="200dp"
        android:src="@drawable/ic_keyboard_arrow_left_white_24dp"
        app:backgroundTint="@color/my_primary"/>




</RelativeLayout>